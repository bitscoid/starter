{
  "extends": "./.svelte-kit/tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "svelte.config.ts",
    "vite.config.ts",
    "postcss.config.ts",
    "tailwind.config.ts"
  ],
  "compilerOptions": {
    "types": ["node"],
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}
